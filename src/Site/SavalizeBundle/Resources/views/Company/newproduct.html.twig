{% extends '::base.html.twig' %}
{% block title %}Products{% endblock %}
{% block body %}
<div class="container-fluid">
<nav class="navbar">
    <div class="navbar-inner">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">Save and Socialize</a>

        <div class="nav-collapse">
                    <ul class="nav" style="font-weight:normal">
                        <li class="active"><a href="{{ url('company_view_product') }}">New Product</a> </li>
                        <li><a href="#">Product Reviews</a></li>
                        <li><a href="#">Settings</a></li>
                        <li><a href="{{ path('contact_us_company') }}">Contact Us</a></li>
                    </ul>
                </div>
    </div>
</nav>

    <div class="row-fluid content"> 
        <div class="span4">
            <h4> Your Products </h4>
            <ul class="list-style">
                <li><b>Brands</b></li>
                {% for brand in brands %}
                {{ brand }}  &nbsp
                {% endfor %}</ul></br>
                <ul><li><b>Productss</b></li>
                      {% for product in products %}
                        {{ product }} &nbsp
                      {% endfor %}
            </ul>
        </div>

        <div class="span4" style="text-align:center">
            <h4>Add New Brand</h4>
            <div id="msg"></div>
        <div class="row-fluid" style = "font-size: 20px">
            <table>
            <tr>
                <td>Category: </td> <td><select  id="catIp">
                <option value="0"></option>
                    {% for category in categories %}
                    <option value="{{ category.id }}"> {{ category.name }} </option>
                    {% endfor %}
                    </select> </td>
            </tr>
            <tr>
            <td>Brand: </td><td><input type="text" id="brandIp"></td>
            </tr></table>
            <input type="button" class="btn" id="addBrandButton" value="Add"/>
            </div>
            </div>
        
        <div class="span4" style="text-align:center">
            <h4>Add New Product</h4>
            <div id="anothermsg"></div>
            <div class="row-fluid" style = "font-size: 20px">
                <form id="submitForm" enctype="multipart/form-data">
            <table>
            <tr>
                <td>Category: </td> <td><select  id="catInput" name = "category">
                <option value="0"></option>
                    {% for category in categories %}
                    <option value="{{ category.id }}" > {{ category.name }} </option>
                    {% endfor %}
                    </select> </td>
            </tr>
            <tr>
                <td>Brand: </td><td><input type="text" name="brand" id="brandInput"></td>
            </tr>
            <tr>
                <td>Product: </td><td><input type="text" name="product" id="productInput"></td>
            </tr>
            <tr>
                <td>Upload Photo: </td><td><input type="file" name="photoInput" ></td>
            </tr>
            <tr></tr>
            </table><input type="submit" class="btn" value="Add"/>
        </form>
           
        </div>
            </div>
        </div>

    </div>
        </div>
{% endblock %}

