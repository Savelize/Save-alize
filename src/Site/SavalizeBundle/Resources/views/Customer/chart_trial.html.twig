            </li>
            <li>
                Brand: <input type="text" id="brandIP">
            </li>
            <li>
            Product: <input type="text" id="productIP">
            </li>
            </div>
        </ul>
            </div>
          <input type="button" id="generateReport" value="Generate Report"/>

            <canvas id="myChart" width="400" height="400"></canvas>
        <input type="hidden" id="hiddenCategory" value="{{ categories }}"> 
          
